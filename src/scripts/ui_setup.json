{
    "description": "define a list of items (buttons / text) to be shown into the UI and the url of the mqtt broker",
    "mqtt_broker": {
        "host": "localhost",
        "port": "9001",
        "options": {
            "clientId": "mqtt_client_01",
            "connectTimeout": 4000,
            "reconnectPeriod": 1000,
            "keepalive": 60,
            "clean": true,
            "username": "tfm",
            "password": "public"
        }
    },
    "items": [
        {
            "name": "Increase AC temp",
            "topic": "/monitor_node/heating/action/",
            "message": "+1", 
            "qos": 2
        },
        {
            "name": "Decrease AC temp",
            "topic": "/monitor_node/heating/action/",
            "message": "-1",
            "qos": 2
        },
        {
            "name": "Room temperature",
            "topic": "/monitor_node/room/temperature",
            "qos": 2,
            "description": "Temperature sensor"
        },
        {
            "name": "Start air extractor",
            "topic": "/monitor_node/room/extractor",
            "message": "100",
            "qos": 2
        },
        {
            "name": "Stop air extractor",
            "topic": "/monitor_node/room/extractor",
            "message": "0",
            "qos": 2
        },
        {
            "name": "Room smoke",
            "topic": "/monitor_node/room/smoke",
            "qos": 2,
            "description": "Smoke sensor"
        }
    ]
}